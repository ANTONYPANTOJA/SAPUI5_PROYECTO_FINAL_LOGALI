<core:FragmentDefinition 
            xmlns:core="sap.ui.core" 
            xmlns:mvc="sap.ui.core.mvc" 
            xmlns="sap.m"  
            xmlns:form="sap.ui.layout.form">

		<form:SimpleForm
				title="1. {i18n>tipoEmpleado}"
				minWidth="1024"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>tipo}"/>
				<Text id="txtTypeEmployee" text="{=${/_typeEmployee} === 'interno' ? ${i18n>interno} : ${/_typeEmployee} === 'autonomo' ? ${i18n>autonomo} : ${i18n>gerente}}"/>
				<Link press="pasoOne" text="{i18n>editar}" emphasized="true" />
			</form:content>
		</form:SimpleForm>
		
		<form:SimpleForm
				title="2. {i18n>datosEmpleado}"
				minWidth="1024"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>nombre}"/>
				<Text text="{/FirstName}"/>
				<Label text="{i18n>apellidos}"/>
				<Text text="{/LastName}"/>
				<Label text="{= ${/_typeEmployee} === 'autonomo' ? ${i18n>CIF} : ${i18n>DNI}}"/>
				<Text  text="{/Dni}"/>
				<Label text="{= ${/_typeEmployee} === 'autonomo' ? ${i18n>precioDiario} : ${i18n>salarioBrutoAnual}}"/>
				<Text  text="{/salary}"/>
				<Label text="{i18n>FechaIncorporacion}"/>
				<Text  text="{path:'/CreationDate',type:'sap.ui.model.type.Date',formatOptions: { style: 'long'}}"/>
				<Link press="pasoTwo" emphasized="true" text="{i18n>editar}"/>
			</form:content>
		</form:SimpleForm>
		
		<form:SimpleForm
				title="3. {i18n>infoAdicional}"
				minWidth="1024"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>comentario}"/>
				<Text text="{/comentario}"/>
				<Label text="{i18n>documentos}"/>
				<Text text="{/_numFiles} {i18n>ficheros}"/>
				<Label></Label>
				<List items="{/_files}">
					<items>
						<StandardListItem title="{DocName}"></StandardListItem>
					</items>
				</List>
				<Link press="pasoThree" text="{i18n>editar}" emphasized="true" />
			</form:content>
		</form:SimpleForm>
		
</core:FragmentDefinition>